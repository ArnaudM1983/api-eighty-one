{# templates/emails/admin_order_notification.html.twig #}
<!DOCTYPE html>
<html>
<head>
    <meta charset="UTF-8">
    <style>
        body { font-family: 'Arial', sans-serif; color: #222; line-height: 1.4; background-color: #f4f4f4; margin: 0; padding: 20px; }
        .container { max-width: 650px; margin: 0 auto; background: #ffffff; padding: 20px; border: 2px solid #e0e0e0; }
        
        .header { background: #000; color: #fff; padding: 15px; text-align: center; margin-bottom: 20px; }
        .badge { display: inline-block; padding: 5px 10px; border-radius: 4px; font-weight: bold; font-size: 12px; text-transform: uppercase; }
        .badge-relay { background: #e3f2fd; color: #0d47a1; } 
        .badge-home { background: #f3e5f5; color: #4a148c; }
        .badge-pickup { background: #e8f5e9; color: #2e7d32; }
        
        .section-title { font-size: 14px; font-weight: bold; text-transform: uppercase; border-bottom: 1px solid #eee; padding-bottom: 5px; margin: 20px 0 10px 0; color: #555; }
        
        .logistics-table { width: 100%; border-collapse: collapse; margin-bottom: 20px; }
        .logistics-table th { text-align: left; background: #333; color: #fff; padding: 8px; font-size: 12px; }
        .logistics-table td { padding: 10px; border: 1px solid #eee; font-size: 14px; vertical-align: middle; }
        
        .img-cell { width: 50px; text-align: center; }
        .product-img { width: 50px; height: 50px; object-fit: cover; border-radius: 4px; border: 1px solid #ddd; display: block; }
        
        .qty-cell { font-weight: bold; font-size: 18px; color: #d32f2f; background: #fff5f5; text-align: center; width: 40px; border: 2px solid #d32f2f !important; }
        
        .info-box { background: #fafafa; padding: 15px; border: 1px solid #eee; margin-bottom: 10px; }
        .footer { text-align: center; font-size: 12px; color: #999; margin-top: 30px; }
    </style>
</head>
<body>
    <div class="container">
        <div class="header">
            <h2 style="margin:0;">NOUVELLE COMMANDE #{{ order.id }}</h2>
            <p style="margin:5px 0 0 0; font-size: 13px;">Re√ßue le {{ "now"|date("d/m/Y H:i") }}</p>
        </div>

        {# Alerte Statut de Paiement #}
        {% if order.status == 'paid' %}
            <div style="background: #e8f5e9; color: #2e7d32; padding: 10px; text-align: center; font-weight: bold; border: 1px solid #2e7d32; margin-bottom: 20px;">
                ‚úÖ PAIEMENT D√âJ√Ä VALID√â (STRIPE)
            </div>
        {% elseif order.shippingMethod == 'pickup' %}
            <div style="background: #fff3e0; color: #e65100; padding: 10px; text-align: center; font-weight: bold; border: 1px solid #e65100; margin-bottom: 20px;">
                ‚ö†Ô∏è √Ä PAYER EN BOUTIQUE ({{ order.total|number_format(2, ',', ' ') }} ‚Ç¨)
            </div>
        {% endif %}

        <div class="section-title">üì¶ √Ä PR√âPARER</div>
        <table class="logistics-table">
            <thead>
                <tr>
                    <th style="width: 50px;">Image</th>
                    <th>D√©signation / R√©f√©rence</th>
                    <th style="text-align: center;">Qt√©</th>
                    <th style="text-align: right;">Prix Unit.</th>
                </tr>
            </thead>
            <tbody>
                {% for item in order.items %}
                    <tr>
                        {# Colonne Image #}
                        <td class="img-cell">
                            {% set thumb = null %}
                            {% if item.variant and item.variant.image %}
                                {% set thumb = item.variant.image %}
                            {% elseif item.product.mainImage %}
                                {% set thumb = item.product.mainImage %}
                            {% endif %}

                            {% if thumb %}
                                {# En local, on force localhost:8000 si ce n'est pas d√©j√† une URL compl√®te #}
                                {% set fullImageUrl = thumb starts with 'http' ? thumb : 'http://localhost:8000' ~ thumb %}
                                <img src="{{ fullImageUrl }}" class="product-img" alt="Produit">
                            {% else %}
                                <div style="width:50px; height:50px; background:#eee; line-height:50px; color:#aaa; font-size:10px; text-align: center;">N/A</div>
                            {% endif %}
                        </td>

                        {# Colonne D√©signation #}
                        <td>
                            {% if item.variant %}
                                <strong>{{ item.variant.name }}</strong>
                                <br><small style="color: #666;">SKU: {{ item.variant.sku|default('V-' ~ item.variant.id) }}</small>
                            {% else %}
                                <strong>{{ item.product.name }}</strong>
                                <br><small style="color: #666;">SKU: {{ item.product.sku|default('P-' ~ item.product.id) }}</small>
                            {% endif %}
                        </td>

                        {# Colonne Quantit√© #}
                        <td class="qty-cell">
                            {{ item.quantity }}
                        </td>

                        {# Colonne Prix #}
                        <td style="text-align: right; font-weight: bold;">
                            {{ item.price|number_format(2, ',', ' ') }} ‚Ç¨
                        </td>
                    </tr>
                {% endfor %}
            </tbody>
        </table>

        {# SECTION LOGISTIQUE : Masqu√©e si Pickup #}
        {% if order.shippingMethod != 'pickup' %}
            <div class="section-title">üöö LIVRAISON</div>
            <div class="info-box">
                {% if order.shippingInfo.pudoId %}
                    <span class="badge badge-relay">Point Relais ({{ order.shippingMethod }})</span>
                    <p style="margin-top:10px;">
                        <strong>ID Relais : {{ order.shippingInfo.pudoId }}</strong><br>
                        <strong>{{ order.shippingInfo.pudoName }}</strong><br>
                        {{ order.shippingInfo.pudoAddress }}<br>
                        {{ order.shippingInfo.pudoPostalCode }} {{ order.shippingInfo.pudoCity }}
                    </p>
                {% else %}
                    <span class="badge badge-home">Domicile ({{ order.shippingMethod }})</span>
                    <p style="margin-top:10px;">
                        <strong>{{ order.shippingInfo.firstName }} {{ order.shippingInfo.lastName }}</strong><br>
                        {{ order.shippingInfo.address }}<br>
                        {{ order.shippingInfo.postalCode }} {{ order.shippingInfo.city }}<br>
                        {{ order.shippingInfo.country|upper }}
                    </p>
                {% endif %}
            </div>
        {% else %}
            <div class="section-title">üè™ MODE DE RETRAIT</div>
            <div class="info-box">
                <span class="badge badge-pickup">RETRAIT EN BOUTIQUE</span>
                <p style="margin-top:10px; color: #2e7d32;">
                    <strong>Retrait client pr√©vu en magasin. Ne pas exp√©dier.</strong>
                </p>
            </div>
        {% endif %}

        <div class="section-title">üë§ CONTACT CLIENT</div>
        <div class="info-box">
            Nom : <strong>{{ order.shippingInfo.lastName|upper }} {{ order.shippingInfo.firstName }}</strong><br>
            Email : <a href="mailto:{{ order.shippingInfo.email }}">{{ order.shippingInfo.email }}</a>
            <br>Tel : <strong>{{ order.shippingInfo.phone }}</strong>
        </div>

        <div class="section-title">üí∞ R√âCAPITULATIF FINANCIER</div>
        <div class="info-box">
            Total Commande : <strong>{{ order.total|number_format(2, ',', ' ') }} ‚Ç¨</strong><br>
            Frais de port : {{ order.shippingCost|number_format(2, ',', ' ') }} ‚Ç¨<br>
            Poids total : {{ order.totalWeight }}g
        </div>

        <div style="margin-top: 30px; text-align: center;">
            {# Lien dynamique : Utilise site_url si disponible, sinon localhost #}
            {% set adminBaseUrl = site_url|default('http://localhost:8000') %}
            <a href="http://localhost:3000/admin/orders/{{ order.id }}" 
               style="background: #000; color: #fff; padding: 12px 25px; text-decoration: none; font-weight: bold; border-radius: 4px; display: inline-block;">
                VOIR DANS LE BACK-OFFICE
            </a>
        </div>

        <div class="footer">
            Eighty One System - Notification Logistique
        </div>
    </div>
</body>
</html>